<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="19.3dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="이메일"
                android:textColor="@color/color_393939"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6.7dp"
                android:background="@drawable/sel_round_background_stroke"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:singleLine="true"
                    android:hint="이메일 주소 입력"
                    android:paddingLeft="15.7dp"
                    android:textColor="@color/color_393939"
                    android:textColorHint="@color/color_4c312f35"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/btn_double_check"
                    android:layout_width="70dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/btn_overlap_on"
                    android:gravity="center"
                    android:text="중복확인"
                    android:textColor="#312f35"
                    android:textSize="13dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.7dp"
                android:includeFontPadding="false"
                android:text="비밀번호  ( 영문, 숫자 조합 8~16자리 )"
                android:textColor="@color/color_393939"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/pw"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6.7dp"
                android:background="@drawable/sel_round_background_stroke"
                android:hint="영문, 숫자 조합 8~16자리"
                android:inputType="textPassword"
                android:paddingLeft="15.7dp"
                android:textColor="@color/color_393939"
                android:singleLine="true"
                android:textColorHint="@color/color_4c312f35"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/warning_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.3dp"
                android:visibility="invisible"
                android:gravity="end"
                android:includeFontPadding="false"
                android:text="영문, 숫자 조합 8~16자리이어야 합니다"
                android:textColor="#ff7077"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="비밀번호 확인"
                android:textColor="@color/color_393939"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/pw_confirm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6.7dp"
                android:background="@drawable/sel_round_background_stroke"
                android:hint="비밀번호 확인"
                android:paddingLeft="15.7dp"
                android:textColor="@color/color_393939"
                android:inputType="textPassword"
                android:textColorHint="@color/color_4c312f35"
                android:singleLine="true"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/warning_pw_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginTop="6.3dp"
                android:visibility="invisible"
                android:text="비밀번호가 일치하지 않습니다"
                android:textColor="#ff7077"
                android:includeFontPadding="false"
                android:textSize="12dp" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="이름"
                android:textColor="@color/color_393939"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6.7dp"
                android:background="@drawable/sel_round_background_stroke"
                android:hint="실명 입력"
                android:paddingLeft="15.7dp"
                android:singleLine="true"
                android:textColor="@color/color_393939"
                android:textColorHint="@color/color_4c312f35"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="닉네임 ( 최대 6자 )"
                android:layout_marginTop="15.7dp"
                android:textColor="@color/color_393939"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/nick"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6.7dp"
                android:background="@drawable/sel_round_background_stroke"
                android:hint="닉네임 입력 ( 최대 6자 )"
                android:maxLength="6"
                android:paddingLeft="15.7dp"
                android:singleLine="true"
                android:textColor="@color/color_393939"
                android:textColorHint="@color/color_4c312f35"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="휴대폰 번호"
                android:layout_marginTop="15.7dp"
                android:textColor="@color/color_393939"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="6.7dp"
                android:background="@drawable/sel_round_background_stroke"
                android:hint="휴대폰 번호 입력 ( - 없이 )"
                android:inputType="number"
                android:paddingLeft="15.7dp"
                android:singleLine="true"
                android:textColor="@color/color_393939"
                android:textColorHint="@color/color_4c312f35"
                android:textSize="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/btn_join"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fde24f"
            android:gravity="center"
            android:text="회원가입"
           android:textColor="#312f35"
            android:textSize="22dp"
            android:textStyle="bold" />
    </LinearLayout>
</layout>